    <!--Style for root layout for Items in RecyclerView-->

    <style name="MyItem">
        <item name="android:layout_marginLeft">0dp</item>
        <item name="android:layout_marginRight">0dp</item>
        <item name="android:layout_marginTop">@dimen/activity_vertical_xsmall_margin</item>
        <item name="android:layout_marginBottom">@dimen/activity_vertical_xsmall_margin</item>
    </style>
    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

