<resources>

    <style name="AppBlankTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Main theme colors -->
        <!--   your app branding color for the app bar -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <!--   darker variant for the status bar and contextual app bars -->
        <item name="colorPrimaryDark">@color/colorPrimaryDarker</item>
        <!--   theme UI controls like checkboxes and text fields -->
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <!--Both themes below are those accepted to make the ToolBar works-->
    <!-- Base application thème. -->
    <style name="AppTheme" parent="AppBlankTheme">
        <!-- Customize your theme here. -->
        <!-- Base application thème. -->
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="cardViewStyle">@style/MyCardView</item>
        <!--<item name="spinnerDropDownItemStyle">@style/mydropdown</item>-->
    </style>
    <!--Changing the color of the background-->
    <!--<style name="mydropdown" parent="@style/Base.TextAppearance.AppCompat.Widget.DropDownItem">-->
    <!--<item name="android:background">@color/colorPrimary</item>-->
    <!--<item name="android:textColor">#FF000000</item>-->
    <!--<item name="android:textStyle">italic</item>-->
    <!--</style>-->
    <style name="MyTextAppearance.Design.Tab" parent="TextAppearance.Design.Tab">
        <item name="android:textStyle">italic</item>
        <item name="textAllCaps">false</item>
    </style>

    <!--Style for Small Card View-->
    <style name="MyCardView" parent="CardView.Light">
        <item name="android:layout_marginLeft">@dimen/activity_horizontal_margin</item>
        <item name="android:layout_marginRight">@dimen/activity_horizontal_margin</item>
        <item name="android:layout_marginTop">@dimen/activity_vertical_margin</item>
        <item name="android:layout_marginBottom">@dimen/activity_vertical_margin</item>
        <item name="android:padding">@dimen/activity_horizontal_margin</item>
    </style>
    <style name="MyCardView_VerticalConstraints" parent="CardView.Light">
        <item name="android:layout_marginTop">0dp</item>
        <item name="android:layout_marginBottom">0dp</item>
    </style>
    <style name="MyMediumCardView" parent="MyCardView">
        <item name="android:layout_marginLeft">@dimen/activity_horizontal_small_margin</item>
        <item name="android:layout_marginRight">@dimen/activity_horizontal_small_margin</item>
        <item name="android:layout_marginTop">@dimen/activity_vertical_small_margin</item>
        <item name="android:layout_marginBottom">@dimen/activity_vertical_small_margin</item>
    </style>
    <style name="MyMediumCardView_VerticalConstraints" parent="MySmallCardView">
        <item name="android:layout_marginTop">0dp</item>
        <item name="android:layout_marginBottom">0dp</item>
    </style>
    <style name="MySmallCardView" parent="MyCardView">
        <item name="android:layout_marginLeft">@dimen/activity_horizontal_small_margin</item>
        <item name="android:layout_marginRight">@dimen/activity_horizontal_small_margin</item>
        <item name="android:layout_marginTop">@dimen/activity_vertical_small_margin</item>
        <item name="android:layout_marginBottom">@dimen/activity_vertical_small_margin</item>
    </style>
    <style name="MySmallCardView_VerticalConstraints" parent="MySmallCardView">
        <item name="android:layout_marginTop">0dp</item>
        <item name="android:layout_marginBottom">0dp</item>
    </style>
    <style name="MyNavDrawer" parent="Widget.Design.NavigationView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_gravity">start</item>
        <item name="android:layout_marginLeft">@dimen/activity_horizontal_small_margin</item>
        <item name="android:layout_marginRight">@dimen/activity_horizontal_small_margin</item>
        <item name="android:layout_marginTop">@dimen/activity_vertical_small_margin</item>
        <item name="android:layout_marginBottom">@dimen/activity_vertical_small_margin</item>
        <item name="android:fitsSystemWindows">true</item>
        <item name="menu">@menu/navigation_drawer_menu</item>
        <item name="elevation">@dimen/activity_vertical_small_margin</item>
        <item name="itemIconTint">@color/navdrawer_item_color</item>
        <item name="itemTextColor">@color/navdrawer_item_color</item>
        <item name="android:background">@drawable/side_nav_bar_background</item>
        <item name="itemBackground">@drawable/side_nav_bar_item</item>
        <item name="headerLayout">@layout/nav_header_navigation_drawer</item>
    </style>
