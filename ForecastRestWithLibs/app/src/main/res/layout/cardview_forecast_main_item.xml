<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context="com.android2ee.formation.restservice.forecastyahoo.withlibs.view.forecast.WeatherActivity">

    <com.android2ee.formation.restservice.forecastyahoo.withlibs.view.main.MainCardView
        android:id="@+id/cdv_main"
        style="@style/MyCardView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toStartOf="@id/cdv_weather"

        app:layout_constraintHorizontal_chainStyle="spread"
        >

        <include layout="@layout/cardview_main_content" />

    </com.android2ee.formation.restservice.forecastyahoo.withlibs.view.main.MainCardView>


    <com.android2ee.formation.restservice.forecastyahoo.withlibs.view.weather.WeatherCardView
        android:id="@+id/cdv_weather"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        app:layout_constraintEnd_toStartOf="@+id/cdv_conditions"
        app:layout_constraintStart_toEndOf="@+id/cdv_main"
        app:layout_constraintTop_toTopOf="@+id/cdv_main"
        app:layout_constraintBottom_toBottomOf="@id/cdv_main">

        <include layout="@layout/cardview_weather_item_content" />

    </com.android2ee.formation.restservice.forecastyahoo.withlibs.view.weather.WeatherCardView>

    <android.support.v7.widget.CardView
        android:id="@+id/cdv_conditions"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/cdv_weather"
        app:layout_constraintTop_toTopOf="@+id/cdv_weather"
        app:layout_constraintBottom_toBottomOf="@id/cdv_weather">

        <include layout="@layout/cardview_condition" />
    </android.support.v7.widget.CardView>
</android.support.constraint.ConstraintLayout>