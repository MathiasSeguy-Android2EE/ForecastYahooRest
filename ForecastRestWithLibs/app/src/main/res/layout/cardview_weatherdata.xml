<?xml version="1.0" encoding="utf-8"?>
<com.android2ee.formation.restservice.forecastyahoo.withlibs.view.weather_data.WeatherDataCardView
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

<android.support.constraint.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/activity_horizontal_margin">

    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/txv_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingBottom="@dimen/activity_vertical_margin"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="City name" />

    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/txv_visibility"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingBottom="@dimen/activity_vertical_margin"
        app:layout_constraintHorizontal_chainStyle="spread_inside"
        app:layout_constraintEnd_toStartOf="@+id/txv_coord"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/txv_name"
        app:layout_constraintBottom_toTopOf="@id/txv_base"
        tools:text="Visibility" />

    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/txv_coord"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingBottom="@dimen/activity_vertical_margin"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/txv_visibility"
        app:layout_constraintTop_toBottomOf="@id/txv_name"
        app:layout_constraintBottom_toTopOf="@id/txv_dt"
        tools:text="Coordinates" />

    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/txv_base"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintHorizontal_chainStyle="spread_inside"
        app:layout_constraintEnd_toStartOf="@+id/txv_dt"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/txv_visibility"
        app:layout_constraintBottom_toBottomOf="parent"
        tools:text="Base" />

    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/txv_dt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/txv_base"
        app:layout_constraintTop_toBottomOf="@id/txv_coord"
        app:layout_constraintBottom_toBottomOf="parent"
        tools:text="Dt" />

</android.support.constraint.ConstraintLayout>

</com.android2ee.formation.restservice.forecastyahoo.withlibs.view.weather_data.WeatherDataCardView>
