<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.android2ee.formation.restservice.forecastyahoo.withlibs.view.current.CurrentWeatherActivity">

    <com.android2ee.formation.restservice.forecastyahoo.withlibs.view.main.MainCardView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/cdv_main"
        style="@style/MyCardView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toTopOf="@+id/vg_rv_weather_list"
        app:layout_constraintEnd_toStartOf="@+id/txv_winds"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintHorizontal_weight="50"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_chainStyle="spread_inside">

        <include layout="@layout/cardview_main_content" />

    </com.android2ee.formation.restservice.forecastyahoo.withlibs.view.main.MainCardView>

    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/txv_winds"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toTopOf="@+id/txv_clouds"
        app:layout_constraintEnd_toStartOf="@+id/txv_snow"
        app:layout_constraintHorizontal_weight="25"
        app:layout_constraintStart_toEndOf="@+id/cdv_main"
        app:layout_constraintTop_toTopOf="@+id/cdv_main"
        app:layout_constraintVertical_chainStyle="spread"
        tools:text="WIND" />

    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/txv_snow"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toTopOf="@+id/txv_rain"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_weight="25"
        app:layout_constraintStart_toEndOf="@+id/txv_winds"
        app:layout_constraintTop_toTopOf="@+id/cdv_main"
        app:layout_constraintVertical_chainStyle="spread"
        tools:text="SNOW" />

    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/txv_clouds"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="@+id/cdv_main"
        app:layout_constraintEnd_toStartOf="@+id/txv_rain"
        app:layout_constraintHorizontal_chainStyle="spread"
        app:layout_constraintStart_toStartOf="@+id/txv_winds"
        app:layout_constraintTop_toBottomOf="@+id/txv_winds"
        tools:text="CLOUDS" />

    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/txv_rain"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="@+id/cdv_main"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/txv_clouds"
        app:layout_constraintTop_toBottomOf="@+id/txv_snow"
        tools:text="RAIN" />

    <FrameLayout
        android:id="@+id/vg_rv_weather_list"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toTopOf="@+id/cdv_weather_data"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cdv_main">

        <android.support.v7.widget.RecyclerView
            android:id="@+id/rv_weather_list"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:itemCount="1"
            tools:listitem="@layout/cardview_weather">

        </android.support.v7.widget.RecyclerView>
    </FrameLayout>


    <com.android2ee.formation.restservice.forecastyahoo.withlibs.view.weather_data.WeatherDataCardView
        android:id="@+id/cdv_weather_data"
        style="@style/MyCardView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/cdv_sys"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/vg_rv_weather_list">

        <include layout="@layout/cardview_weatherdata"/>

    </com.android2ee.formation.restservice.forecastyahoo.withlibs.view.weather_data.WeatherDataCardView>

    <com.android2ee.formation.restservice.forecastyahoo.withlibs.view.sys.SysCardView
        android:id="@+id/cdv_sys"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginRight="@dimen/activity_horizontal_margin"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="@+id/cdv_weather_data"
        app:layout_constraintStart_toEndOf="@+id/cdv_weather_data"
        app:layout_constraintTop_toTopOf="@+id/cdv_weather_data"
        android:layout_marginEnd="@dimen/activity_horizontal_margin">

        <include layout="@layout/cardview_sys"/>

    </com.android2ee.formation.restservice.forecastyahoo.withlibs.view.sys.SysCardView>

</android.support.constraint.ConstraintLayout>
