<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.android2ee.formation.restservice.forecastyahoo.withlibs.view.current.CurrentWeatherActivity">

    <include
        layout="@layout/exception_layout"
        android:visibility="gone" />


    <android.support.design.widget.TabLayout xmlns:tablayout="http://schemas.android.com/apk/res-auto"
        android:id="@+id/tabLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary"
        android:fillViewport="true"
        android:visibility="gone"
        tablayout:tabIndicatorHeight="4dp"
        tablayout:tabTextAppearance="@style/MyTextAppearance.Design.Tab" />

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.android2ee.formation.restservice.forecastyahoo.withlibs.view.main.MainCardView
            android:id="@+id/cdv_main"
            style="@style/MyCardView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toTopOf="@+id/vg_rv_weather_list"
            app:layout_constraintEnd_toStartOf="@+id/cdv_cloud"
            app:layout_constraintHorizontal_chainStyle="packed"
            app:layout_constraintHorizontal_weight="50"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_chainStyle="spread_inside">

            <include layout="@layout/cardview_main_content" />

        </com.android2ee.formation.restservice.forecastyahoo.withlibs.view.main.MainCardView>

        <android.support.v7.widget.CardView
            android:id="@+id/cdv_cloud"
            style="@style/MyCardView"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintBottom_toTopOf="@+id/vg_rv_weather_list"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_weight="50"
            app:layout_constraintStart_toEndOf="@+id/cdv_main"
            app:layout_constraintTop_toTopOf="parent">

            <include layout="@layout/cardview_condition" />
        </android.support.v7.widget.CardView>


        <FrameLayout
            android:id="@+id/vg_rv_weather_list"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintBottom_toTopOf="@+id/cdv_weather_data"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/cdv_main">

            <android.support.v7.widget.RecyclerView
                android:id="@+id/rv_weather_list"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/blue_pure"
                tools:itemCount="1"
                tools:listitem="@layout/cardview_weather_item">

            </android.support.v7.widget.RecyclerView>
        </FrameLayout>


        <com.android2ee.formation.restservice.forecastyahoo.withlibs.view.weather_data.WeatherDataBeaconCardView
            android:id="@+id/cdv_weather_data"
            style="@style/MyCardView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/cdv_sys"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/vg_rv_weather_list">

            <include layout="@layout/cardview_weatherdata" />

        </com.android2ee.formation.restservice.forecastyahoo.withlibs.view.weather_data.WeatherDataBeaconCardView>

        <com.android2ee.formation.restservice.forecastyahoo.withlibs.view.sys.SysCardView
            android:id="@+id/cdv_sys"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginEnd="@dimen/activity_horizontal_margin"
            android:layout_marginRight="@dimen/activity_horizontal_margin"
            app:layout_constraintBottom_toBottomOf="@+id/cdv_weather_data"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/cdv_weather_data"
            app:layout_constraintTop_toTopOf="@+id/cdv_weather_data">

            <include layout="@layout/cardview_sys" />

        </com.android2ee.formation.restservice.forecastyahoo.withlibs.view.sys.SysCardView>


    </android.support.constraint.ConstraintLayout>
</LinearLayout>
