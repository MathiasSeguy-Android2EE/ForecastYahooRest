<resources>

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.




    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.




        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>
    <!--!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!-->
    <!-- !!!! Vas voir ca:http://developer.android.com/guide/topics/ui/actionbar.html et teste les changements-->
    <style name="Theme.MyTheme" parent="Theme.AppCompat.Light">
        <!-- colorPrimary is used for the default action bar background -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <!-- colorPrimaryDark is used for the status bar -->
        <item name="colorPrimaryDark">@color/colorPrimaryDarker</item>
        <!--colorAccent is used as the default value for colorControlActivated,which is used to tint widgets-->
        <item name="colorAccent">@color/colorAccent</item>
        <!--Styling the NavigationBar-->
        <item name="@style/Widget.AppCompat.Spinner.DropDown.ActionBar">
           MyBase.Widget.AppCompat.Spinner.DropDown.ActionBar
        </item>
        <item name="@style/Widget.AppCompat.Light.Spinner.DropDown.ActionBar">
            MyBase.Widget.AppCompat.Light.Spinner.DropDown.ActionBar
        </item>
        <item name="@style/Widget.AppCompat.Spinner">
            MyBase.Widget.AppCompat.Spinner
        </item>

    </style>
    <style name=" MyBase.Widget.AppCompat.Spinner" parent="@style/Widget.AppCompat.Spinner.DropDown.ActionBar">
        <item name="spinnerMode">dropdown</item>
        <item name="android:clickable">true</item>
        <!--<item name="android:background">@drawable/abc_spinner_mtrl_am_alpha</item>-->
        <item name="android:background">#FFFF0000</item>
        <item name="android:dropDownSelector">?attr/listChoiceBackgroundIndicator</item>
        <item name="android:popupBackground">#FFFF00FF</item>
        <item name="android:dropDownVerticalOffset">0dip</item>
        <item name="android:dropDownHorizontalOffset">0dip</item>
        <item name="overlapAnchor">true</item>
        <item name="android:dropDownWidth">wrap_content</item>
        <item name="popupPromptView">@layout/abc_simple_dropdown_hint</item>
        <item name="android:gravity">left|start|center_vertical</item>
        <item name="disableChildrenWhenDisabled">true</item>
    </style>
    <style name="MyBase.Widget.AppCompat.Spinner.DropDown.ActionBar" parent="@style/Widget.AppCompat.Spinner.DropDown.ActionBar">
        <item name="spinnerMode">dropdown</item>
        <item name="android:clickable">true</item>
        <!--<item name="android:background">@drawable/abc_spinner_mtrl_am_alpha</item>-->
        <item name="android:background">#FFFF0000</item>
        <item name="android:dropDownSelector">?attr/listChoiceBackgroundIndicator</item>
        <item name="android:popupBackground">#FFFF00FF</item>
        <item name="android:dropDownVerticalOffset">0dip</item>
        <item name="android:dropDownHorizontalOffset">0dip</item>
        <item name="overlapAnchor">true</item>
        <item name="android:dropDownWidth">wrap_content</item>
        <item name="popupPromptView">@layout/abc_simple_dropdown_hint</item>
        <item name="android:gravity">left|start|center_vertical</item>
        <item name="disableChildrenWhenDisabled">true</item>
    </style>

    <style name="MyBase.Widget.AppCompat.Light.Spinner.DropDown.ActionBar" parent="@style/Widget.AppCompat.Light.Spinner.DropDown.ActionBar">
        <item name="spinnerMode">dropdown</item>
        <item name="android:clickable">true</item>
        <!--<item name="android:background">@drawable/abc_spinner_mtrl_am_alpha</item>-->
        <item name="android:background">#FFFF0000</item>
        <item name="android:dropDownSelector">?attr/listChoiceBackgroundIndicator</item>
        <item name="android:popupBackground">#FFFF00FF</item>
        <item name="android:dropDownVerticalOffset">0dip</item>
        <item name="android:dropDownHorizontalOffset">0dip</item>
        <item name="overlapAnchor">true</item>
        <item name="android:dropDownWidth">wrap_content</item>
        <item name="popupPromptView">@layout/abc_simple_dropdown_hint</item>
        <item name="android:gravity">left|start|center_vertical</item>
        <item name="disableChildrenWhenDisabled">true</item>
    </style>
</resources>


